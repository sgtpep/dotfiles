<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
  <menu id="client-menu">
    <item label="Minimize">
      <action name="Iconify" />
    </item>
    <item label="Maximize">
      <action name="ToggleMaximize" />
    </item>
    <item label="Fullscreen">
      <action name="ToggleFullscreen" />
    </item>
    <item label="Move to Output">
      <action name="MoveToOutput" direction="right" wrap="yes" />
    </item>
    <item label="Always on Top">
      <action name="ToggleAlwaysOnTop" />
    </item>
    <item label="Close">
      <action name="Close" />
    </item>
  </menu>

  <menu id="root-menu">
    <menu id="client-list-combined-menu" label="Windows" />
    <item label="Web browser">
      <action name="Execute" command="x-www-browser" />
    </item>
    <item label="Terminal">
      <action name="Execute" command="xdg-terminal-exec" />
    </item>
    <item label="Exit">
      <action name="Exit" />
    </item>
    <item label="Reboot">
      <action name="Execute" command="systemctl reboot" />
    </item>
    <item label="Power Off">
      <action name="Execute" command="systemctl poweroff" />
    </item>
  </menu>
</openbox_menu>
