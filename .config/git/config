[alias]
new-branch = !bash -c '( [[ ! $(git status -s) ]] || git stash ) && git checkout "${2-$(git remote show origin | grep \"( HEAD branch:\" | cut -d \" \" -f 5)}" && git pull --stat && git checkout -b "$1" && git push -u origin "$(git rev-parse --abbrev-ref HEAD)" && ( ! git stash show &> /dev/null || git stash pop )' --

[core]
pager = perl -I /usr/share/doc/git/contrib/diff-highlight -MDiffHighlight -e 'DiffHighlight::highlight_stdin()' | less

[interactive]
diffFilter = perl -I /usr/share/doc/git/contrib/diff-highlight -MDiffHighlight -e 'DiffHighlight::highlight_stdin()'

[pager]
status = true

[pull]
rebase = true

[push]
followTags = true

