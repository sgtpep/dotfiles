[alias]
new-branch = !bash -c 'git stash && git checkout "$(git remote show origin | grep -Po \"(?<=HEAD branch: ).+\")" && git pull --stat && git checkout -b "$@" && git push -u origin "$(git rev-parse --abbrev-ref HEAD)" && git stash pop' --

[core]
pager = perl -I /usr/share/doc/git/contrib/diff-highlight -MDiffHighlight -e 'DiffHighlight::highlight_stdin()' | less

[interactive]
diffFilter = perl -I /usr/share/doc/git/contrib/diff-highlight -MDiffHighlight -e 'DiffHighlight::highlight_stdin()'

[pager]
status = true

[pull]
rebase = true

[push]
followTags = true

[user]
email = mail"@"danil.mobi
name = Danil Semelenov
