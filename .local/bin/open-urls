#!/bin/bash
set -eu

[[ ${FLOCK-} == $0 ]] || FLOCK=$0 exec flock "$0" "$SHELL" -"$-" "$0" "$@"

function write-file {
  local path=$1

  local copy=$path~
  cat > "$copy"
  mv "$copy" "$path"
}

path=~/.urls
while [[ -s $path ]]; do
  limit=10
  delay=15

  uniq "$path" | write-file "$path"

  urls=$(head -n "$limit" "$path")

  setsid xargs -n 1 -r xdg-open <<< "$urls" &> /dev/null &
  sleep 0.1

  log=$path.log
  echo "$urls" >> "$log"
  tail -n 100 "$log" | write-file "$log"

  sed -i "1,${limit}d" "$path"

  [[ ! -s $path ]] || sleep "$delay"
done
