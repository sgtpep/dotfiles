#!/bin/bash
set -eu

lock=/tmp/${0##*/}
if [[ ${FLOCK-} != $0 ]]; then
  FLOCK=$0 exec flock "$lock" "$SHELL" -"$-" "$0" "$@"
else
  function on-exit {
    local status=$?
    rm -f "$lock"
    return "$status"
  }
  trap on-exit EXIT
fi

command=(chromium-browser)

function write-file {
  local path=$1

  local copy=$path~
  cat > "$copy"
  mv "$copy" "$path"
}

path=~/.urls
while [[ -s $path ]]; do
  limit=10
  delay=15

  uniq "$path" | write-file "$path"

  urls=$(head -n "$limit" "$path")

  setsid xargs -r -d '\n' "${command[@]}" <<< "$urls" &> /dev/null &
  sleep 0.1

  log=$path.log
  echo "$urls" >> "$log"
  tail -n 100 "$log" | write-file "$log"

  sed -i "1,${limit}d" "$path"

  [[ ! -s $path ]] || sleep "$delay"
done
