#!/bin/bash
set -eu
username=danil
if [[ $USER == pi ]]; then
  id "$username" &> /dev/null || sudo useradd -m -G sudo -s /bin/bash "$username"
  sudo grep -q "^$username:\\$" /etc/shadow || sudo passwd "$username"
fi
if ! command -v ansible-pull > /dev/null; then
  sudo apt update
  sudo apt -y install ansible git
fi
exec sudo -u "$username" ansible-pull -K -U https://github.com/sgtpep/dotfiles2.git .local/share/playbooks/desktop.yml
