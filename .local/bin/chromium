#!/bin/bash
set -eu
if [[ $(< /etc/os-release) == *ID=raspbian* ]]; then
  name=chromium-browser
else
  name=chromium
fi
set -- --disable-smooth-scrolling --enable-native-notifications --load-extension=/usr/share/chromium/extensions/ublock-origin "$@"
[[ -f ~/.job ]] || set -- --disable-notifications "$@"
set -- /usr/bin/"$name" "$@"
[[ -x $1 ]] || install-packages "$name" webext-ublock-origin
exec "$@"
