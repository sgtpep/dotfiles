#!/bin/bash
set -eu
if [[ $(< /etc/os-release) == *ID=raspbian* ]]; then
  name=chromium-browser
else
  name=chromium
fi
path=/usr/bin/$name
[[ -x $path ]] || install-packages "$name" webext-ublock-origin
[[ -f ~/.job ]] || set -- --disable-notifications "$@"
exec "$path" --disable-smooth-scrolling --enable-native-notifications --load-extension=/usr/share/chromium/extensions/ublock-origin "$@"
