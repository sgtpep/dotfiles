#!/bin/bash
set -eu
[[ ${FLOCK-} == $0 ]] || FLOCK=$0 exec flock "$0" bash -"$-" "$0" "$@"
if ls ~/.msmtpqueue/* &> /dev/null; then
  command=/usr/share/doc/msmtp/examples/msmtpqueue/msmtp-runqueue.sh
  [[ -x $command ]] || install-packages msmtp
  "$command"
fi
set -- "${@/#/default:}"
mbsync ${CRON+-q} "${@--a}"
paths=(~/mail/Inbox/new/*)
if [[ -f ${paths[0]} ]]; then
  echo "${#paths[@]} new"
  exit 1
fi
