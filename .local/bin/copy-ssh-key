#!/bin/bash
set -eu
mountpoint=/mnt
sudo mount /dev/disk/by-label/keys "$mountpoint"
path=~/.ssh/id_rsa
mkdir -p "${path%/*}"
cp "$mountpoint"/"${path##*/}" "$path"
sudo umount "$mountpoint"
chmod 600 "$path"
sed -i 's|\bhttps://.*\(@github\.com\)/|git\1:|' ~/.git/config
until ssh-keygen -p -N '' -f "$path"; do
  :
done
