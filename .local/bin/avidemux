#!/bin/bash
set -eu
install-packages libglu1-mesa
set -- firejail --appimage ~/.local/apps/"${0##*/}".AppImage "$@"
if [[ ! -x $3 ]]; then
  mkdir -p "${3%/*}"
  version=2.7.2
  wget -O "$3" https://sourceforge.net/projects/avidemux/files/avidemux/"$version"/avidemux_"$version".appImage/download || rm -f "$3"
  [[ $(sha256sum "$3") == 90c2058b152f9286984f9a9b8d5ea2f929a2a6c6ade066991c52bfe6a04b36ae\ * ]] || rm -f "$3"
  chmod +x "$3"
fi
exec "$@"
