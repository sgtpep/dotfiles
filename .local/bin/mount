#!/bin/bash
set -eu

output=$(gio mount -il)

device=$(
  prefix=unix-device:
  mount=can_mount=1
  eject=can_eject=1
  grep "$prefix\|$mount\|$eject" <<< "$output" | \
    tr -d $' \'' | \
    sed -z 's/\n\(can_\)/ \1/g' | \
    grep -Po -m 1 "(?<=$prefix).+?(?= $mount $eject)" || :
)
if [[ $device ]]; then
  gio mount -d "$device"

	path=$(/usr/sbin/mount | grep -Po "(?<=^$device on )[^ ]+")
  if [[ ! $path ]]; then
    paths=(/run/media/"$USER"/*)
    path=${paths[0]}
  fi
else
  root=$(grep -Po -m 1 '(?<=activation_root=).+' <<< "$output" || :)
  if [[ $root ]]; then
    gvfs=~/.gvfs
    if ! mountpoint -q "$gvfs"; then
      mkdir -p "$gvfs"
      /usr/libexec/gvfsd-fuse "$gvfs"
    fi

    gio mount "$root"

    path=$gvfs/${root/:\/\//:host=}
  fi
fi

[[ -v path ]] || exit 0

vifm "$path" || :

[[ ! ${device-} ]] || gio mount -e "$path"
[[ ! ${root-} ]] || gio mount -u "$root"
