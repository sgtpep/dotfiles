#!/bin/bash
set -eu
. process-photo

function convert-video {
  install-packages ffmpeg
  if ! ffprobe "$1" |& grep -q ' encoder '; then
    local path=${1%.*}~.mp4
    ffmpeg -y -i "$1" -vf 'scale=-2:min(ih\, 720)' "$path"
    rm -f "$1"
    mv "$path" "${1%.*}".mp4
  fi
}

function convert-videos {
  local path
  for path; do
    [[ ! -f $path ]] || convert-video "$path"
  done
}

function main {
  [[ $@ ]] || set -- .
  local path
  for path; do
    [[ -d $path ]]
    local directory=${path%/}
    local pattern=*.{3gp,mov,mp4}
    lowercase-extensions "$directory"/${pattern^^}
    rename-dated "$directory"/$pattern
    rename-whatsapp "$directory"/$pattern
    convert-videos "$directory"/$pattern
  done
}

[[ -v BASH_SOURCE[0] && ${BASH_SOURCE[0]##*/} != ${0##*/} ]] || main "$@"
