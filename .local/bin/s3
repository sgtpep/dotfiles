#!/bin/bash
set -eu

bucket=$1

path=$XDG_RUNTIME_DIR/${0##*/}/$bucket

if mountpoint -q "$path"; then
  mounted=true
else
  eval "$(pass aws)"

  mkdir -p "$path"
  rclone mount --daemon s3:"$bucket" "$path"
  until mountpoint -q "$path"; do
    sleep 1
  done
fi

vifm "$path" || :

[[ ! -v mounted ]] || exit
until fusermount -u "$path"; do
  sleep 1
done
