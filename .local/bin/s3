#!/bin/bash
set -eu

bucket=$1

path=$XDG_RUNTIME_DIR/${0##*/}/$bucket

. rename-window

if ! mountpoint -q "$path"; then
  output="$(pass aws)"
  eval "$output"

  mkdir -p "$path"
  rclone --log-level=ERROR mount s3:"$bucket" "$path" &

  until mountpoint -q "$path"; do
    sleep 1
  done

  mounted=true
fi

vifm "$path" || :

[[ -v mounted ]] || exit 0

until fusermount -u "$path"; do
  sleep 1
done
