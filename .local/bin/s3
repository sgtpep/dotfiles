#!/bin/bash
set -eu
path=/tmp/${0##*/}/$1
if mountpoint -q "$path"; then
  mounted=true
else
  mkdir -p "$path"
  eval "$(pass aws)"
  rclone mount --daemon s3:"$1" "$path"
  until mountpoint -q "$path"; do
    sleep 1
  done
fi
vifm "$path" || :
if [[ ! -v mounted ]]; then
  until fusermount -u "$path"; do
    sleep 1
  done
fi
