#!/bin/bash
set -eu
command=${0##*/}
path=~/.local/apps/$command
set -- firejail --whitelist="$path" "$path"/google-chrome --disable-infobars --no-sandbox "$@"
if [[ ! -x $3 ]]; then
  path=/tmp/$command
  wget -O "$path" https://dl.google.com/linux/direct/"$command"-stable_current_amd64.deb || rm -f "$path"
  directory=${3%/*}
  mkdir -p "$directory"
  dpkg --fsys-tarfile "$path" | tar -x -C "$directory" --strip-components=4
fi
exec "$@"
