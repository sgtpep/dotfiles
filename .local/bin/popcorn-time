#!/bin/bash
set -eu
path=~/.local/apps/${0##*/}/Popcorn-Time
if [[ ! -x $path ]]; then
  mkdir -p "${path%/*}"
  wget -O - https://mirror02.popcorntime.sh/build/Popcorn-Time-0.3.10-Linux-64.tar.xz | tar -Jx -C "${path%/*}" || rm -f "$path"
  [[ $(md5sum "$path") == 42bfbd562dc712e06679740ed53a07de\ * ]]
fi
install-packages libgconf-2-4
exec firejail --protocol=inet,inet6,netlink,unix "$path"
