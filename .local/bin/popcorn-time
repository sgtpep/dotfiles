#!/bin/bash
set -eu
path=~/.local/apps/${0##*/}
if [[ ! -d $path ]]; then
  temp=/tmp/popcorn-time.tar.xz
  wget -O "$temp" https://mirror02.popcorntime.sh/build/Popcorn-Time-0.3.10-Linux-64.tar.xz || rm -f "$temp"
  [[ $(md5sum "$temp") == 42bfbd562dc712e06679740ed53a07de\ * ]] || rm -f "$temp"
  mkdir -p "$path"
  tar -x -C "$path" -f "$temp"
fi
install-packages libgconf-2-4
exec firejail --protocol=inet,inet6,netlink,unix "$path"/Popcorn-Time
