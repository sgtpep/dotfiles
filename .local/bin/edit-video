#!/bin/bash
set -eu

input=$1
action=$2
shift 2

install-packages ffmpeg

copy=${input%.*}~.${input##*.}

if [[ $action == concat ]]; then
  paths=("$@")

  path=$XDG_RUNTIME_DIR/ffmpeg-input
  printf 'file %q\n' "$input" "${paths[@]}" > "$path"

  ffmpeg -f concat -safe 0 -i "$path" -c copy "$copy"
  rm "$path"

  for path in "${paths[@]}"; do
    target=${path%/*}/.${path##*/}
    mv "$path" "$target"
  done
elif [[ $action == cut ]]; then
  start=$1
  end=$2

  ffmpeg -i "$input" -c copy -ss "$start" ${end:+-to "$end"} "$copy"
elif [[ $action == rotate ]]; then
  angle=$1

  ffmpeg -i "$input" -c copy -metadata:s:v rotate="$angle" "$copy"
else
  exit 1
fi

backup=${input%/*}/.${input##*/}
mv "$input" "$backup"

mv "$copy" "$input"
