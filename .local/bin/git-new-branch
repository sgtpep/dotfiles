#!/bin/bash
set -eu

name=$1
base=${2-}

if [[ $(git status -s) ]]; then
  git stash
  stashed=1
fi

if [[ ! $base ]]; then
  base=$(git remote show origin | grep ' HEAD branch:' | cut -d ' ' -f 5)
fi
git checkout "$base"

git pull --stat

git checkout -b "$name"

ref=$(git rev-parse --abbrev-ref HEAD)
git push -u origin "$ref"

[[ ! ${stashed-} ]] || git stash pop
