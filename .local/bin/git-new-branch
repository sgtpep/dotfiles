#!/bin/bash
set -eu

if [[ $(git status -s) ]]; then
  git stash
  stashed=1
fi

branch=$(git remote show origin | grep ' HEAD branch:' | cut -d ' ' -f 5)
git checkout "${-$branch}"

git pull --stat
git checkout -b "$1"

ref=$(git rev-parse --abbrev-ref HEAD)
git push -u origin "$ref"

[[ ! ${stashed-} ]] || git stash pop
